{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",

    "allowJs": true,

    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",

    "removeComments": true,

    "typeRoots": ["./node_modules/@types", "./src/@types"],

    "esModuleInterop": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "@controllers/*": ["./src/controllers/*"],
      "@models/*": ["./src/models/*"],
      "@config": ["./src/config/*"]
    }
  }
}
